<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="wrap_content"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/samscreen_photo"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@android:drawable/ic_menu_gallery" />

        </RelativeLayout>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="                        Tap to view Map." android:clickable="true" android:onClick="open_map"/>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="15dp" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:" />

            <TextView
                android:id="@+id/samscreen_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:minWidth="250dp"
                android:paddingLeft="20dp"
                android:text="Trushank Dand"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="15dp" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location:" />

            <TextView
                android:id="@+id/samscreen_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:minWidth="250dp"
                android:paddingLeft="10dp"
                android:text="Rafi Ahmed Kidwai road" />
        </TableRow>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TableRow
                    android:id="@+id/tableRow7"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp" >

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distance:" />

                    <TextView
                        android:id="@+id/samscreen_distance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="10"
                        android:maxWidth="130dp"
                        android:minWidth="130dp"
                        android:paddingLeft="15dp"
                        android:text="215m"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </TableRow>

                <TableRow
                    android:id="@+id/TableRow01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp" >

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emergency:" />

                    <TextView
                        android:id="@+id/samscreen_emergency"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="12"
                        android:maxWidth="250dp"
                        android:minWidth="120dp"
                        android:paddingLeft="10dp"
                        android:text="Medical"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </TableRow>
            </LinearLayout>

            <ImageButton
                android:id="@+id/samscreen_map"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:onClick="samscreen_map"
                android:src="@drawable/ic_menu_directions" />

        </LinearLayout>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="20dp" >

            <Button
                android:id="@+id/samscreen_accept"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:onClick="samscreen_accept"
                android:text="Accept" />

            <Button
                android:id="@+id/samscrenn_reject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="samscreen_reject"
                android:text="Reject"/>

        </TableRow>
    </LinearLayout>

</ScrollView>