<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/goodsamscreen_photo"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:src="@android:drawable/ic_menu_gallery" />

        </RelativeLayout>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="                           Tap to view Map" android:clickable="true" android:onClick="open_map1"/>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:" />

            <TextView
                android:id="@+id/goodsamscreen_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:minWidth="250dp"
                android:paddingLeft="20dp"
                android:text="Trushank Dand"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </TableRow>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TableRow
                    android:id="@+id/tableRow7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp" >

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sex: " />

                    <TextView
                        android:id="@+id/goodsamscreen_sex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:maxLength="1"
                        android:paddingLeft="10dp"
                        android:paddingRight="137dp"
                        android:text="M"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </TableRow>
            </LinearLayout>

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:onClick="goodsamscreen_refresh"
                android:src="@drawable/refresh" />

        </LinearLayout>

        <TableRow
            android:id="@+id/TableRow02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp" >

            <TextView
                android:id="@+id/TextView04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile: " />

            <TextView
                android:id="@+id/goodsamscreen_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="goodsamscreen_call"
                android:paddingLeft="10dp"
                android:text="9833064861"
                android:textAppearance="?android:attr/textAppearanceMedium" android:paddingRight="20dp"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Tap to call)"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location:" />

            <TextView
                android:id="@+id/goodsamscreen_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:minWidth="250dp"
                android:paddingLeft="10dp"
                android:text="Rafi Ahmed Kidwai road" />

        </TableRow>

        <LinearLayout
            android:id="@+id/LinearLayout01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/LinearLayout02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TableRow
                    android:id="@+id/TableRow04"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp" >

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distance:" />

                    <TextView
                        android:id="@+id/goodsamscreen_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="110dp"
                        android:minWidth="110dp"
                        android:paddingLeft="15dp"
                        android:text="215m"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </TableRow>

                <TableRow
                    android:id="@+id/TableRow03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp" >

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emergency:" />

                    <TextView
                        android:id="@+id/goodsamscreen_emergency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="117dp"
                        android:minWidth="117dp"
                        android:paddingLeft="10dp"
                        android:text="Medical"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </TableRow>
            </LinearLayout>

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:onClick="goodsamscreen_map"
                android:src="@drawable/ic_menu_directions" />

        </LinearLayout>

        <TableRow
            android:id="@+id/TableRow05"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp" >

            <LinearLayout
                android:id="@+id/LinearLayout04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/goodsamscreen_chat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxWidth="207dp"
                    android:minWidth="207dp"
                    android:paddingTop="10dp"
                    android:text="Trunk: Hello, Where are you?" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/goodsamscreenchatbutton"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:text="Chat" android:onClick="goodsamscreen_chat"/>
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp" >

            <EditText
                android:id="@+id/goodsamscreen_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter Emer Code"
                android:inputType="text"
                android:maxLength="10"
                android:maxWidth="180dp"
                android:minWidth="203dp" >

                <requestFocus />
            </EditText>

            <Button
                android:id="@+id/button2"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="Saved" android:onClick="goodsamscreen_save"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp" >

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Leave" android:onClick="goodsamscreen_leave"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        </TableRow>

    </LinearLayout>

</ScrollView>